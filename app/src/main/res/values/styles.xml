<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    </style>


    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="RegButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">#F08C35</item>
    </style>

    <style name="CapButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">#D32F2F</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
